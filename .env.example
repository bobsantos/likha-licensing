# Likha Licensing Platform - Environment Configuration Template
# Copy this file to .env and modify the values for your environment

# Database Configuration
POSTGRES_DB=likha_licensing
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=jdbc:postgresql://postgres:5432/likha_licensing

# Spring Boot Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Multi-tenancy Configuration
APP_MULTITENANCY_ENABLED=true
APP_MULTITENANCY_DEFAULT_TENANT=default
APP_MULTITENANCY_TENANT_HEADER=X-Tenant-ID

# Security Configuration
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=change_me_in_production
JWT_SECRET=generate_a_secure_jwt_secret_key
JWT_EXPIRATION=86400000

# Redis Configuration (Optional)
REDIS_HOST=redis
REDIS_PORT=6379

# Development Tools (Development Only)
SPRING_DEVTOOLS_RESTART_ENABLED=true
SPRING_DEVTOOLS_LIVERELOAD_ENABLED=true

# Logging Configuration
LOGGING_LEVEL_APP_LIKHA=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_MODULITH=DEBUG
LOGGING_LEVEL_SQL=DEBUG

# Frontend Configuration
FRONTEND_DEV_SERVER_PORT=5173
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Docker Compose Services
COMPOSE_PROJECT_NAME=likha-licensing